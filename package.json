{
  "name": "linux-system-monitor",
  "version": "1.0.0",
  "description": "Comprehensive Linux system resource monitor built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron . --js-flags=\"--expose-gc\" --disable-gpu --disable-gpu-compositing --disable-gpu-sandbox",
    "dev": "electron . --dev --js-flags=\"--expose-gc\" --disable-gpu --disable-gpu-compositing --disable-gpu-sandbox",
    "build": "node-gyp rebuild",
    "build:native": "@electron/rebuild -f -w",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps || true",
    "install": "node-gyp rebuild",
    "clean": "node-gyp clean"
  },
  "keywords": [
    "system-monitor",
    "linux",
    "electron",
    "resource-monitor"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "node-gyp": "^10.0.0"
  },
  "dependencies": {
    "node-addon-api": "^8.0.0",
    "systeminformation": "^5.21.26"
  },
  "build": {
    "appId": "com.linux-system-monitor.app",
    "productName": "Linux System Monitor",
    "copyright": "Copyright Â© 2025",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!src",
      "!binding.gyp",
      "!setup.sh",
      "!test_*.js",
      "!test_*.sh"
    ],
    "extraFiles": [
      {
        "from": "build/Release/system_monitor.node",
        "to": "build/Release/system_monitor.node"
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "System"
    },
    "appImage": {
      "artifactName": "linux-system-monitor-${version}-${arch}.${ext}"
    },
    "deb": {
      "artifactName": "linux-system-monitor-${version}-${arch}.${ext}",
      "depends": [],
      "maintainer": "Linux System Monitor <system-monitor@localhost>"
    },
    "nodeGypRebuild": false,
    "npmRebuild": true,
    "asar": true,
    "afterPack": "scripts/after-pack.js",
    "asarUnpack": [
      "**/build/Release/*.node",
      "**/node_modules/**/*.node"
    ]
  }
}
